<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_book_details">
        <t t-call="web.external_layout">
            <div class="book-header text-center">
                <h1>LIBRARY MANAGEMENT SYSTEM</h1>
            </div>
            <div class="book-path">
                <img src="lms/static/src/image/image.png" width="100" height="100"/>
                <div class="address text-center">
                    <p>Address: Ukhra, West Bengal</p>
                    <p>Phone: 9856325666</p>
                    <hr></hr>
                </div>
            </div>
            <main class="main-content">
                <div class="book-details">
                    <p>Title:
                        <t t-esc="docs.name"/>
                    </p>
                    <p>Author:
                        <t t-esc="docs.author"/>
                    </p>
                    <div>
                        <h3>Transactions of the Book</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Book</th>
                                    <th>Author</th>
                                    <th>Librarian</th>
                                    <th>Student</th>
                                    <th>Issue_Date</th>
                                    <th>Return Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs.transaction_ids" t-as="transaction">
                                    <tr>
                                        <td>
                                            <t t-esc="transaction.book_id.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="transaction.author"/>
                                        </td>
                                        <td>
                                            <t t-esc="transaction.person_id.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="transaction.student_id.name"/>
                                        </td>
                                        <td>
                                            <t t-esc="transaction.issue_date"/>
                                        </td>
                                        <td>
                                            <t t-esc="transaction.return_date"/>
                                        </td>
                                        <td>
                                            <t t-esc="transaction.status"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                </div>
            </main>
            <div class="after_footer">
                <hr></hr>
                <p>Thank You</p>
            </div>
        </t>
    </template>
<!--This tag is used to define a new record in the Odoo database or to update an existing one.-->
    <record id="action_report_book_details" model="ir.actions.report">  <!-- id="action_report_book_details": It specifies a unique identifier for this record.)(model="ir.actions.report": It indicates that this record is of the type "ir.actions.report", which is used for defining report actions in Odoo.-->
<!--    This field sets the human-readable name for the report action.-->
        <field name="name">Library Book Detail Report</field>
<!--    This field specifies the model for which the report is designed. In this case, it's "library.book.detail".-->
        <field name="model">library.book.detail</field>
<!--    It defines the type of report. In this case, it's a QWeb PDF report.-->
        <field name="report_type">qweb-pdf</field>
<!--    This field contains the technical name of the report. It is often used to reference the report in code.-->
        <field name="report_name">lms.report_book_details</field>
<!--    This field specifies the file name of the report.        -->
        <field name="report_file">lms.report_book_details</field>
<!--    This sets the name that will be displayed when printing the report.        -->
        <field name="print_report_name">"Library Book Detail"</field>
<!--    This field establishes a binding between the report and a specific model. It references the model with the external ID "model_library_book_detail".        -->
        <field name="binding_model_id" ref="model_library_book_detail"/>
<!--    It specifies the type of binding. In this case, it indicates that it is a report binding.        -->
        <field name="binding_type">report</field>
    </record>

</odoo>


